			"key": "APIKey",
			"value": "Your API Key",
			"type": "string"
		},
		{
			"key": "Token",
			"value": "Your Token",
			"type": "string"
		},
		{
			"key": "baseURL",
			"value": "https://api.trello.com/1/",
			"type": "string"
		},
		{
			"key": "boardName",
			"value": ""
		},
		{
			"key": "boardId",
			"value": ""
		}
	]
}